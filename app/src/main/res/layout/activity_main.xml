<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffdfeaf1"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:text="@string/media_streamer"
        android:id="@+id/button"
        android:textColor="#FFF"
        android:background="#F08C35"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="spotifyStreamer"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/super_duo1"
        android:id="@+id/button2"
        android:textColor="#FFF"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="scoresApp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/super_duo2"
        android:id="@+id/button3"
        android:textColor="#FFF"
        android:background="#F08C35"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="libraryApp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/ant_terminator"
        android:id="@+id/button4"
        android:textColor="#FFF"
        android:background="#F08C35"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="buildItBigger"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/materialize"
        android:id="@+id/button5"
        android:textColor="#FFF"
        android:background="#F08C35"
        android:layout_below="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="baconReader"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:textColor="#FFF"
        android:background="#DC143C"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="capstoneApp"/>

</RelativeLayout>
